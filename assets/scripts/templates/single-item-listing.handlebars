
<!--Table-->
<div class="container" "table-responsive" style="margin-top:100px;">
<table id="dest" class="table table-hover table-striped">
<!--Table head-->
  <thead>
    <tr>
      <th scope="col">ID #</th>
      <th scope="col">Product</th>
      <th scope="col">Price Per Unit</th>
      <th scope="col">Cost</th>
      <th scope="col">Quantity</th>
      <th scope="col">ADS</th>

    </tr>
  </thead>
  <tbody>

  {{#each item as |item|}}

    <tr>
      <td>{{item._id}}</td>
    <!--  <td>{{> partial}}</td> -->
      <td>{{limit item.description 20}}</td>
      <td>{{item.price}}</td>

      <td>{{item.cost}}</td>
      <td>{{item.quantity}}</td>
      <td>{{item.ads}}</td>
    </div>
  </tr>

  {{/each}}

</tr>
</tbody>
</table>
</div>
